<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".fragments.OverviewFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/fol_constraint_layout_margin_top">

        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="@dimen/fol_image_view_width"
            android:layout_height="@dimen/fol_image_view_height"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/fol_image_view_margin_bottom"
            android:layout_marginEnd="@dimen/fol_image_view_margin_end"
            android:contentDescription="@string/movie_poster_content_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H,3:4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="@dimen/fol_linear_layout_width"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fol_linear_layout_margin_end"
            android:layout_marginStart="@dimen/fol_linear_layout_margin_start"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/iv_poster"
            app:layout_constraintTop_toTopOf="@+id/iv_poster">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/release"
                    android:textColor="@color/text"
                    android:textSize="@dimen/fol_text_view_size" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fol_text_view_margin_start"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/fol_text_view_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_plot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:textSize="@dimen/fol_text_view_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_poster"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/fol_text_view_vote_margin_bottom"
            android:layout_marginStart="@dimen/fol_text_view_vote_margin_start"
            android:layout_marginTop="@dimen/fol_text_view_vote_margin_top"
            android:background="@drawable/ic_vote"
            android:gravity="center"
            android:paddingTop="@dimen/fol_text_view_vote_padding_top"
            android:textColor="@color/vote"
            android:textSize="@dimen/fol_text_view_vote_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/iv_poster"
            app:layout_constraintTop_toTopOf="@+id/iv_poster"
            app:layout_constraintVertical_bias="0.868" />

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/fol_view_width"
            android:layout_height="@dimen/fol_view_height"
            android:layout_marginTop="@dimen/fol_view_margin_top"
            app:layout_constraintTop_toBottomOf="@+id/iv_poster" />
    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>
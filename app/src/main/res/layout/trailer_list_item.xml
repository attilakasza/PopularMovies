<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/tli_card_view_margin_bottom"
    android:layout_marginEnd="@dimen/tli_card_view_margin_end"
    android:layout_marginStart="@dimen/tli_card_view_margin_start"
    android:layout_marginTop="@dimen/tli_card_view_margin_top"
    android:backgroundTint="@color/tabSelected">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_trailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/movie_trailer_content_description" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/tli_text_view_margin"
            android:textColor="@android:color/white" />

    </LinearLayout>

</android.support.v7.widget.CardView>